    "react": "18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/react-native": "^12.9.0",
    "@types/react": "~18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "organize-imports-cli": "^0.10.0",
