  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "sh scripts/lint.sh",
    "lint:fix": "sh scripts/lint.sh fix",
    "format": "prettier --write \"**/*.+(js|ts|tsx)\"",
    "organizeImports": "organize-imports-cli tsconfig[.*].json",
